{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "lib": [ "ESNext", "dom" ],
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "allowJs": true,
    "noEmit": false,
    "emitDecoratorMetadata":true,
    "experimentalDecorators":true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
